{
    "name": "dream-vacations-backend",
    "version": "1.0.0",
    "description": "Backend for Dream Vacation Destinations app",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "pm2 start dist/server.js --name 'dream-vacations-backend' -i max",
        "stop": "pm2 stop dream-vacations-backend",
        "restart": "pm2 restart dream-vacations-backend",
        "dev": "nodemon src/server.ts"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "axios": "^1.7.5",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "mysql2": "^3.3.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.7.2",
        "nodemon": "^3.1.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
